# =============================================================================
# BOOKSHELF TRAVELLER CONFIGURATION
# =============================================================================
# This file contains all configuration options for Bookshelf Traveller.
# Copy this file to .env and fill in your values.
# Most of these can also be configured via the Web UI at http://localhost:8080
# =============================================================================

# -----------------------------------------------------------------------------
# REQUIRED SETTINGS
# -----------------------------------------------------------------------------

# Discord Bot Token (from Discord Developer Portal)
DISCORD_TOKEN=your_discord_bot_token_here

# Audiobookshelf Server URL (include https://)
bookshelfURL=https://your-audiobookshelf-server.com

# Audiobookshelf API Token (from ABS Settings → Users → API Token)
bookshelfToken=your_abs_api_token_here

# -----------------------------------------------------------------------------
# WEB UI SETTINGS
# -----------------------------------------------------------------------------

# Enable/disable the web management interface
WEBUI_ENABLED=true

# Web UI host binding (0.0.0.0 for all interfaces)
WEBUI_HOST=0.0.0.0

# Web UI port
WEBUI_PORT=8080

# Enable/disable the Discord bot (useful for config-only mode)
BOT_ENABLED=true

# -----------------------------------------------------------------------------
# DISCORD SETTINGS
# -----------------------------------------------------------------------------

# Discord Bot Client ID (for generating invite links)
CLIENT_ID=

# Restrict commands to bot owner only
OWNER_ONLY=true

# Role ID that can control playback (leave empty for owner-only)
PLAYBACK_ROLE=

# Make command responses ephemeral (only visible to user)
EPHEMERAL_OUTPUT=true

# -----------------------------------------------------------------------------
# AUDIOBOOKSHELF SETTINGS
# -----------------------------------------------------------------------------

# Optional: Alternative URL for cover images
# Use this if your ABS server is behind a reverse proxy with different paths
OPT_IMAGE_URL=

# Default search provider for wishlist book searches
# Options: audible, audible.uk, audible.ca, audible.au, audible.fr, 
#          audible.de, audible.it, audible.es, audible.in,
#          google, openlibrary, itunes, fantlab
DEFAULT_PROVIDER=audible

# Timezone for timestamps
# Examples: America/New_York, America/Toronto, Europe/London, Asia/Tokyo
TIMEZONE=America/Toronto

# -----------------------------------------------------------------------------
# BOT BEHAVIOR SETTINGS
# -----------------------------------------------------------------------------

# Enable debug mode (verbose logging)
DEBUG_MODE=false

# Enable multi-user support (allows multiple ABS users to log in)
MULTI_USER=true

# Enable audio playback in voice channels
AUDIO_ENABLED=true

# Enable FFmpeg debug logging (creates log files in db/ffmpeg/)
FFMPEG_DEBUG=false

# Enable experimental features
EXPERIMENTAL=false

# Send DM to owner when bot starts
INITIALIZED_MSG=true

# -----------------------------------------------------------------------------
# TASK SETTINGS
# -----------------------------------------------------------------------------

# How often subscription tasks run (in minutes)
# Affects: new-book-check, finished-book-check
TASK_FREQUENCY=5

# How often playback sessions sync with ABS server (in seconds)
UPDATES=5

# -----------------------------------------------------------------------------
# DATABASE SETTINGS
# -----------------------------------------------------------------------------

# Database type: sqlite (recommended) or mariadb
DB_TYPE=sqlite

# MariaDB/MySQL settings (only used when DB_TYPE=mariadb)
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASSWORD=
DB_NAME=bookshelf

# -----------------------------------------------------------------------------
# ADVANCED SETTINGS
# -----------------------------------------------------------------------------

# Maximum connection attempts to ABS server on startup
MAX_CONN_ATTEMPT=10

# HTTPX timeout settings (in seconds)
HTTPX_TIMEOUT_CONNECT=10.0
HTTPX_TIMEOUT_READ=60.0
HTTPX_TIMEOUT_WRITE=10.0
HTTPX_TIMEOUT_POOL=10.0
